{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "lib": ["es2017", "DOM"],
    "module": "ESNext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "rootDir": "./packages",
    "strict": true,
    "target": "esnext",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["packages/**/*.ts"],
  "exclude": []
}
